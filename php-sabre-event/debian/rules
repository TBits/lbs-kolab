#!/usr/bin/make -f
%:
	dh $@ --with phpcomposer

override_dh_auto_build:
	phpab --output lib/autoload.php lib

override_dh_auto_test:
ifeq (,$(findstring nocheck, $(DEB_BUILD_OPTIONS)))
	phpunit --bootstrap lib/autoload.php || :
else
	@echo "** tests disabled"
endif

get-orig-source:
	uscan --verbose --rename --force
