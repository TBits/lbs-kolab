#!/usr/bin/make -f
%:
	dh $@ --with phpcomposer

override_dh_auto_build:
	# resort folder structure
	mv lib Sabre
	mkdir -p lib
	mv Sabre lib/
	#forward to original dh_auto_build
	dh_auto_build

override_dh_auto_clean:
	rm -rf tests/temp
	dh_auto_clean

override_dh_auto_test:
ifeq (,$(findstring nocheck, $(DEB_BUILD_OPTIONS)))
	cd tests && phpunit
else
	@echo "** tests disabled"
endif

get-orig-source:
	uscan --verbose --force --rename
